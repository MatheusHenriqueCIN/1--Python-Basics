i = 0


while i < 3:
    nome_musica = input()
    quantidade_streams = input()

    if i == 0:
        variavel_musica1 , variavel_stream1 = nome_musica, quantidade_streams

    if i == 1:
        variavel_musica2 , variavel_stream2 = nome_musica, quantidade_streams

    if i == 2:
        variavel_musica3 , variavel_stream3 = nome_musica, quantidade_streams

    i += 1

if variavel_stream1 > variavel_stream2 and variavel_stream1 > variavel_stream3:
    musica_top1 = variavel_musica1
    qntd_stream1 = variavel_stream1
    if variavel_stream2 > variavel_stream3:
        musica_top2 = variavel_musica2
        qntd_stream2 = variavel_stream2
        musica_top3 = variavel_musica3
        qntd_stream3 = variavel_stream3
    else:
        musica_top2 = variavel_musica3
        qntd_stream2 = variavel_stream3
        musica_top3 = variavel_musica2
        qntd_stream3 = variavel_stream2
elif variavel_stream2 > variavel_stream1 and variavel_stream2 > variavel_stream3:
    musica_top1 = variavel_musica2
    qntd_stream1 = variavel_stream2
    if variavel_stream1 > variavel_stream3:
        musica_top2 = variavel_musica1
        qntd_stream2 = variavel_stream1
        musica_top3 = variavel_musica3
        qntd_stream3 = variavel_stream3
    else:
     musica_top2 = variavel_stream3
     qntd_stream2 = variavel_stream3
     musica_top3 = variavel_musica1
     qntd_stream2 = variavel_stream1
elif variavel_stream3 > variavel_stream1 and variavel_stream3 > variavel_stream2:
    musica_top1 = variavel_musica3
    qntd_stream1 = variavel_stream3
    if variavel_stream2 > variavel_stream1:
        musica_top2 = variavel_musica2
        qntd_stream2 = variavel_stream2
        musica_top3 = variavel_musica1
        qntd_stream3 = variavel_stream1
    else:
        musica_top2 = variavel_musica1
        qntd_stream2 = variavel_stream1
        musica_top3 = variavel_musica2
        qntd_stream3 = variavel_stream2

print(f"{musica_top1} teve {qntd_stream1} de streams e foi a música mais ouvida de Simone!")
print(f"{musica_top2} teve {qntd_stream2} de streams e foi a segunda música mais ouvida de Simone!")
print(f"{musica_top3} teve {qntd_stream3} de streams e completou o top 3 das músicas mais ouvidas da artista!")

if qntd_stream1 >  10000000:
    print(f"Uau! {musica_top1} foi um hit certeiro da rainha do Natal!")
elif qntd_stream1 < 1000000:
    print(f"Bom… a música {qntd_stream1} não foi exatamente um sucesso nacional, mas foi o suficiente para entrar no topo da lista das mais ouvidas.")

if qntd_stream2 >  10000000:
    print(f"Uau! {musica_top2} foi um hit certeiro da rainha do Natal!")
elif qntd_stream2 < 1000000:
    print(f"Bom… a música {qntd_stream2} não foi exatamente um sucesso nacional, mas foi o suficiente para entrar no topo da lista das mais ouvidas.") 

if qntd_stream3 >  10000000:
    print(f"Uau! {musica_top3} foi um hit certeiro da rainha do Natal!")
elif qntd_stream3 < 1000000:
    print(f"Bom… a música {qntd_stream3} não foi exatamente um sucesso nacional, mas foi o suficiente para entrar no topo da lista das mais ouvidas.") 

if qntd_stream1 - qntd_stream2 > 5000000:
    print(f"{musica_top1}foi disparada a mais ouvida neste ano! Nenhuma outra música natalina chega aos pés dela!")
elif qntd_stream1 - qntd_stream2 < 1000000:
    print(f"“{musica_top1} foi a mais ouvida, mas não podemos esquecer da música {musica_top2}! Fez bonito nesse feriado!”")


  
